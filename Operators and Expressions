 Question 8
// To know, if the point lies in the circle
            // the distance between the point and the center
            // must less than the radius

            int x, y;
            double radius =5;
            Console.Write("Enter your x coordinates = ");
            x = int.Parse(Console.ReadLine());

            Console.Write("Enter your y coordinates = ");
            y = int.Parse(Console.ReadLine());

            //Calculating the distance between the point and the 
            //radius 

            
            double distanceBetweenThePointAndTheCenter = Math.Sqrt(Math.Pow(x, 2) 
                + Math.Pow(y, 2));
            Console.WriteLine("The distance between the two points  = " + distanceBetweenThePointAndTheCenter);

            if (distanceBetweenThePointAndTheCenter < radius)
            {
                Console.WriteLine("The points lies in the circle");
            }
            else if (distanceBetweenThePointAndTheCenter > radius)
            {
                
                Console.WriteLine("The point does not lies in the circle");

            }


            
            Console.ReadLine();  
        }
    }
}    
