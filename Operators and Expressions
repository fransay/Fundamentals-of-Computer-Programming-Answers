 Question 5
 
 using System;
  
namespace IntroductionToProgramming
{
    class Program
    {
        static void Main(string[] args)
        {
            // To find the area of a trapeziod, we need the parallel sides and the height
            Console.Write("Enter your first side = ");
            double firstSide = double.Parse(Console.ReadLine());

            Console.Write("Enter your Second side = ");
            double secondSide = double.Parse(Console.ReadLine());

            Console.Write("Enter your height side = ");
            double height = double.Parse(Console.ReadLine());

            double areaOftrapezium = (0.5 * (firstSide + secondSide)) * height;

            Console.WriteLine("Area of the trapezium is = {0}", areaOftrapezium);



            Console.ReadLine();  
        }
    }
}    
