 Question 3
 using System;
  
namespace IntroductionToProgramming
{
    class Program
    {
        static void Main(string[] args)
        {

            // An expression whether an integer is even or odd
            Console.Write("Enter your integer = ");
            int userNumber = int.Parse(Console.ReadLine());

            int dividedBy100 = userNumber / 100;
            int dividedBy10R = userNumber % 10;
            if (dividedBy10R == 7)
            {
                Console.WriteLine("The third digit is 7");
            }
            else
            {
                Console.WriteLine("The third is not 7");
            }

            Console.ReadLine();  
        }
    }
}    
