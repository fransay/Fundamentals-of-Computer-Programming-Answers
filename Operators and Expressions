 Question 6
 
 using System;
  
namespace IntroductionToProgramming
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter your Length = ");// Accepting user input for length
            double length = double.Parse(Console.ReadLine());

            Console.Write("Enter your width = ");
            double width = double.Parse(Console.ReadLine());

            double perimeterOfRectangle = 2 * length + 2 * width;
            Console.WriteLine("The perimeter of the rectangle is = " + perimeterOfRectangle);

            


            Console.ReadLine();  
        }
    }
}    
