 Question 7
 using System;
  
namespace IntroductionToProgramming
{
    class Program
    {
        static void Main(string[] args)
        {
            // Calcuating the grativational field on the moon
            // given the weight on earth 


            Console.Write("What is your weight on earth  = ");
            double weightOnEarth = double.Parse(Console.ReadLine());

            double weightonMoon = (17 / 100) * weightOnEarth;
            Console.WriteLine("Your weight on the moon " +
                "is = " + weightonMoon);
            

            Console.ReadLine();  
        }
    }
}    
